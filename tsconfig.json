{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./spec/**/*"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".build/**/*",
    ".artifact/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "reports/**/*"
  ]
}
